<Window x:Class="SharpGraph.GraphView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:SharpGraph.GraphViewModel;assembly=GraphViewModel"
        mc:Ignorable="d"
        Title="SharpGraph" Height="350" Width="525">
    <Window.DataContext>
        <viewmodel:GraphControler />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:WpfNode}">
            <Canvas>
                <Grid
                    Canvas.Left="{Binding Path=X}"
                    Canvas.Top="{Binding Path=Y}">
                    <Ellipse
                        Stroke="Black"
                        Fill="Aqua"
                        Width="{Binding Path=Width}"
                        Height="{Binding Path=Height}" />
                    <ContentPresenter
                        Content="{Binding Path=Label}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Grid>
            </Canvas>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ListBox ItemsSource="{Binding WpfNodes}" />
    </Grid>
</Window>

