<Window x:Class="SharpGraph.GraphView.DotOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Current Dot Content"
        SizeToContent="WidthAndHeight">

    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Save..." Click="FileSave_OnClick" />
                <MenuItem Header="_Save As..." Click="FileSaveAs_OnClick" />
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentControl Content="{Binding CurrentDotContent}" />
        </ScrollViewer>
    </DockPanel>
</Window>