<Window x:Class="SharpGraph.GraphView.ImageOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SharpGraph.GraphView"
        Title="Rendered Image"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <local:ImageToBitmapSourceConverter x:Key="ImageConverter" />
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Save..." Click="FileSave_OnClick" />
                <MenuItem Header="_Save As..." Click="FileSaveAs_OnClick" />
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image Source="{Binding CurrentImage, Converter={StaticResource ImageConverter}}" />
        </ScrollViewer>
    </DockPanel>
</Window>