<Window x:Class="ExampleGraphView.DotLayoutOutput"
        x:Name="DotLayoutOutputName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:graphController="clr-namespace:ExampleGraphView;assembly=GraphController"
        Title="Current Dot Layout Content"
        SizeToContent="WidthAndHeight">

    <DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentControl Content="{Binding (graphController:GraphController.CurrentDotLayoutContent)}" />
        </ScrollViewer>
    </DockPanel>
</Window>